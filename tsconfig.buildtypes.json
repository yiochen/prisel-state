{
  // tsconfig for esm build
  "extends": "./tsconfig",
  "include": ["src/index.ts"],
  "exclude": ["node_modules", ".cache", "dist"],
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "outDir": "dist/types",
    "declaration": true,
    "declarationMap": true /* Generates a sourcemap for each corresponding '.d.ts' file. */,
    "emitDeclarationOnly": true
  }
}
